<%- include head%>
<title>Orvosok</title>
<%- include body%>

<!-- Begin Page Content -->
<div class="container-fluid ">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Doctors</h6>
    </div>
    <div class="card-body">
      <div class="col-12">
        <div class="h6 font-weight-bold phone">
          <%doctor.forEach(function (value) {%>
          <div class="row mb-2">
          
            <div class="col-12 mb-1">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Név:</div>
                      <h6 class="mb-0 font-weight-bold text-gray-800"><%=value.name%></h6>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-user fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-12 mb-1">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Szakterület</div>
                      <h6 class=" mb-0 font-weight-bold text-gray-800"><%=value.spec%></h6>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-12 mb-1">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Város</div>
                      <h6 class="mb-0 font-weight-bold text-gray-800"><%=value.city%></h6>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-city fa-2x text-gray-300" title="This symbolizes your being locked inside"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-12 mb-1">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Átlagos várakozási idő
                      </div>
                      <h6 class="mb-0 font-weight-bold text-gray-800"><%=value.wait%> Nap</h6>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-12 mb-1">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Átlag Elégedettség</div>
                      <div class="row no-gutters align-items-center">
                        <div class="col-auto">
                          <h6 class="mb-0 mr-3 font-weight-bold text-gray-800"><%=value.sumrate%></h6>
                        </div>
                        <div class="col">
                          <div class="progress progress-sm mr-2">
                            <div class="progress-bar bg-primary" role="progressbar" style="width:<%-value.sumrate*20%>%"
                              aria-valuenow="50" aria-valuemin="0" aria-valuemax="5"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-hands-helping fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-12 mb-1">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Kapcsolat</div>
                      <div class="h6 mb-0 font-weight-bold text-gray-800 text-center">
                        <%if(value.cont){%>
                        <a href="<%-value.cont%>">Telefonszám</a>
                        <%}else{%>
                        <i class="fas fa-fw fa-phone-slash mt-2"></i>
                        <%}%>                        
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="mb-2 border-bottom-primary">
                
              </div>
          <%});%>
                      </div>
                    </div>


                    <div class="table-responsive pc">
                      <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                        <thead>
                          <tr>
                            <th>Orvos neve</th>
                            <th>Szakterület</th>
                            <th>Átlagos várakozási idő</th>
                            <th>Átlag Elégedettség</th>
                            <th>Város</th>
                            <th>Telefon</th>
                            <th>Komment</th>
                          </tr>
                        </thead>
                        <tfoot>
                          <tr>
                            <th>Orvos neve</th>
                            <th>Szakterület</th>
                            <th>Átlagos várakozási idő</th>
                            <th>Átlag Elégedettség</th>
                            <th>Város</th>
                            <th>Telefon</th>
                            <th>Komment</th>
                          </tr>
                        </tfoot>
                        <tbody>

                          <%doctor.forEach(function (value) {%>
                          <tr>
                            <td><a style="display:block; color:#858796; text-decoration:none;"
                                href="doctor/<%=value.id%>"><%=value.name%></a>
                            </td>
                            <td><a style="display:block; color:#858796; text-decoration:none;"
                                href="doctor/<%=value.id%>"><%=value.spec%></a>
                            </td>
                            <td><a style="display:block; color:#858796; text-decoration:none;"
                                href="doctor/<%=value.id%>"><%=value.wait%>
                                nap</a></td>
                            <td><a style="display:block; color:#858796; text-decoration:none;"
                                href="doctor/<%=value.id%>"><%=value.sumrate%></a></td>
                            <td><a style="display:block; color:#858796; text-decoration:none;"
                                href="doctor/<%=value.id%>"><%=value.city%></a>
                            </td>
                            <td><a style="display:block; color:#858796; text-decoration:none;"
                                href="doctor/<%=value.id%>">
                                <%if(value.cont){%>
                                <div class="text-center">
                                  <a href="<%-value.cont%>">Telefonszám</a>
                                </div>
                                <%}else{%>
                                <div class="text-center">
                                  <i class="fas fa-fw fa-phone-slash "></i>
                                </div>
                                <%}%>
                  </a>
                  </td>
                  
              <td><a style="display:block; color:#858796; text-decoration:none;"
                  href="doctor/<%=value.id%>"><%=value.comment.length%> db</a></td>
                          </tr>
                          <%});%>

                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
              <div class="container my-auto">
                <div class="copyright text-center my-auto">
                  <span>Copyright &copy; Your Website 2019</span>
                </div>
              </div>
            </footer>
            <!-- End of Footer -->
          </div>
          <!-- End of Content Wrapper -->
        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
          <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">×</span>
                </button>
              </div>
              <div class="modal-body">
                Select "Logout" below if you are ready to end your current session.
              </div>
              <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">
                  Cancel
                </button>
                <a class="btn btn-primary" href="login">Logout</a>
              </div>
            </div>
          </div>
        </div>

