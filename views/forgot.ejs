  <title>Elfelejtett jelszó</title>

  <!-- Custom fonts for this template-->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-6 col-lg-6 col-md-6">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-2">Elfelejtett jelszó?</h1>
                <p class="mb-4">Add meg a fiókodhoz tartozó e-mail címed és elküldjük az új jelszavad, amit később
                  megváltoztathatsz.</p>
              </div>
              <form class="user" method="POST">
              <%if(!message.success){%>
                <div class="form-group">
                  <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                    aria-describedby="emailHelp" placeholder="Email cím" name="email">
                </div>
                <%}%>
                 <%if(message.success){%>
                <div class="form-group">
                  <div class="text-center">
                    <p class="bg-gradient-success btn-user text-gray-100">
                      Email elküldve <br> Kérem nézze meg a postafiókját
                    </p>
                  </div>
                </div>
                <%}%>
                 <%if(!message.success){%>
                <input type="submit" name="" class="btn btn-primary btn-user btn-block" value="Küldés">
                 <%}%>
              </form>
              <hr>
              <div class="text-center">
                <a class="small" href="/register">Regisztráció!</a>
              </div>
              <div class="text-center">
                <a class="small" href="/login">Vissza a bejelentkezéshez</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="js/sb-admin-2.min.js"></script>

</body>

</html>